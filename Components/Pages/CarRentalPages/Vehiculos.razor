@page "/catalogo"
@using CarRental.Models
@using CarRental.Services
@inject VehiculosService VehiculosService

<PageTitle>Catálogo de Vehículos</PageTitle>

<h1>Catálogo de Vehículos</h1>

@if (vehiculos == null)
{
    <p>Cargando vehículos...</p>
}
else
{
    @if (!vehiculos.Any())
    {
        <p>No hay vehículos disponibles en este momento.</p>
    }
    else
    {
        <div class="row">
            @foreach (var vehiculo in vehiculos)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@vehiculo.Imagen" class="card-img-top" alt="@vehiculo.Marca @vehiculo.Modelo" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@vehiculo.Marca @vehiculo.Modelo</h5>
                            <p class="card-text">
                                Año: @vehiculo.Año<br />
                                Transmisión: @vehiculo.Transmision<br />
                                Combustible: @vehiculo.Combustible<br />
                                Color: @vehiculo.Color<br />
                                <strong>Precio por Día: @vehiculo.PrecioPorDia:C</strong>
                            </p>
                            @if (vehiculo.Disponible)
                            {
                                <button class="btn btn-primary">Rentar Ahora</button>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>No Disponible</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
@code {
    private List<Vehiculo>? vehiculos;

    protected override async Task OnInitializedAsync()
    {
        await CargarVehiculos();
    }

    private async Task CargarVehiculos()
    {
        vehiculos = await VehiculosService.ListaVehiculos();
    }
}